---
import MainHead from "@/layouts/MainHead.astro";
import Footer from "@/components/Footer.astro";

import "../styles/global.css";
import "../styles/alternate.css";
interface Props {
  title: string | any;
  description?: string;
}

const { title, description = "My blog" } = Astro.props;
---

<html lang="en">
  <head>
    <MainHead title={title} description={description} />
  </head>
  <body>
    <div class="navbar bg-[#1D232A]">
      <a class="btn btn-ghost text-xl" href="/">TopIT</a>
    </div>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
