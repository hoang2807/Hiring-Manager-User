---
import Layout from "../layouts/Layout.astro";
import IconSvg from "@/components/IconSvg.astro";
import location from "@/data/cities.json";
const recommend: Array<string> = ["Java", "NodeJS", "ReactJS", "PHP"];
---

<Layout title="TopIT">
  <div class="bg-banner h-[320px] w-full relative overflow-hidden">
    <div
      class="container mx-auto flex flex-col justify-center h-full max-w-[1220px] gap-3"
      style="color: white;"
    >
      <h1
        class="mb-4 text-2xl font-extrabold leading-none tracking-tight text-[#CAFF70]"
      >
        Find jobs quickly 24 hours, jobs newest nationwide.
      </h1>
      <p class="">More than 1200+ freelancers are waiting for you</p>
      <div class="flex flex-row gap-3 w-full">
        <select
          class="select select-bordered w-full max-w-[15rem] h-14 text-[#000]"
        >
          <option disabled selected>Thành phố</option>
          {location.map((e) => <option>{e.name}</option>)}
        </select>
        <input
          type="text"
          placeholder="Nhập theo từ khóa kỹ năng"
          class="input input-bordered w-full max-w-[33rem] h-14 text-[#000]"
        />
        <button class="btn btn-primary w-60 h-14">Tìm kiếm</button>
      </div>
      <div class="flex gap-4 items-center">
        <p class="">Mọi người đang tìm kiếm:</p>
        {
          recommend?.map((e) => (
            <button class="badge badge-neutral p-4 text-base">{e}</button>
          ))
        }
      </div>
    </div>
  </div>
  <div class="container mx-auto max-w-[1220px] mt-8 flex flex-col items-center">
    <h2 class="text-2xl font-extrabold leading-none tracking-tight">
      Công cụ tốt nhất cho hành trang ứng tuyển của bạn
    </h2>
    <div class="grid grid-cols-2 gap-12 mt-6">
      <div class="flex justify-center items-center">
        <IconSvg icon="user" />
        <div class="flex flex-col gap-2">
          <span class="text-[#000]">Hồ sơ cá nhân</span>
          <span class="text-[#000]"
            >Kiến tạo hồ sơ ITviec với cấu trúc chuẩn mực cùng các gợi ý chi
            tiết</span
          >
          <button class="btn btn-accent w-1/3">Cập nhật hồ sơ</button>
        </div>
      </div>
      <div class="flex justify-center items-center">
        <IconSvg icon="blog" />
        <div class="flex flex-col gap-2">
          <span class="text-[#000]">Blog về IT</span>
          <span class="text-[#000]"
            >Cập nhật thông tin lương thưởng, nghề nghiệp và kiến thức ngành IT</span
          >
          <button class="btn btn-accent w-1/3">Khám phá blog</button>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto max-w-[1220px] mt-8 flex flex-col items-center">
  </div>
  <!-- <div class="grid grid-cols-3 gap-4">
    <div class="bg-[#fff] rounded p-3 border-0"></div>
  </div> -->
</Layout>
